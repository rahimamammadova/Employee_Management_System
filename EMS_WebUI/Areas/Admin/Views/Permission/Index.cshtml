@model List<PermissionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



<div class="row mt-3 mx-3">

    <div id="tableProgress" class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">

                    <div class="col-6">
                        <h2 class="text-primary">
                            Permission List
                        </h2>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-area="Admin" asp-controller="Permission" asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i>&nbsp; Create a new permission
                        </a>
                    </div>

                </div>
            </div>
            <div class="widget-content widget-content-area">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">ID</th>
                                <th class="text-center">Title</th>
                                <th class="text-center">Description</th>
                                <th class="text-center">Type</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.Id</td>
                                        <td class="text-center">@item.Title</td>
                                        <td class="text-center">@item.Description</td>
                                        <td class="text-center">@item.PermissionType.ToString()</td>
                                        <td class="text-center" role="group">
                                            <a asp-area="Admin" asp-controller="Permission" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" aria-current="page">  <i class="bi bi-trash-fill"></i>Delete</a>
                                            <a asp-area="Admin" asp-controller="Permission" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" aria-current="page"> <i class="bi bi-pencil-square"></i>Modify</a>
                                        </td>
                                    </tr>
                                }


                            }


                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>

</div>

