@model EmployeeDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form asp-action="Update" enctype="multipart/form-data" class="mt-3 my-5">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Firstname" class="control-label"></label>
                        <input asp-for="Firstname" class="form-control" />
                         <input asp-for="Id"  hidden />
                        <span asp-validation-for="Firstname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Lastname" class="control-label"></label>
                        <input asp-for="Lastname" class="form-control" />
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>

                     <div class="col-4">
                    <div class="form-group">
                        <label asp-for="GenderTypeId" class="control-label"></label>

                        <select asp-for="GenderTypeId"
                                class="form-control"
                                asp-items="@(new SelectList(Model.GenderTypeEnumValues, nameof(EnumValueDto.Value), nameof(EnumValueDto.Name)))">
                            <option>Please select one</option>
                        </select>

                        <span asp-validation-for="GenderTypeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="BirthDate" class="control-label"></label>
                        <input asp-for="BirthDate" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>

                   <div class="col-4">
                    <div class="form-group">
                        <label asp-for="DepartmentId" class="control-label"></label>

                        <select asp-for="DepartmentId"
                                class="form-control"
                                asp-items="@(new SelectList(ViewBag.DepartmentDtos, nameof(DepartmentDto.Id), nameof(DepartmentDto.Title)))">
                            <option>Please select one</option>
                        </select>

                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="PositionTypeId" class="control-label"></label>

                        <select asp-for="PositionTypeId"
                                class="form-control"
                                asp-items="@(new SelectList(Model.PositionTypeEnumValues, nameof(EnumValueDto.Value), nameof(EnumValueDto.Name)))">
                            <option>Please select one</option>
                        </select>

                        <span asp-validation-for="PositionTypeId" class="text-danger"></span>
                    </div>
                </div>



                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="HireDate" class="control-label"></label>
                        <input asp-for="HireDate" class="form-control" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                            <label asp-for="@Model.ProfilePicture" class="control-label"></label>
                            <input type="file" name="file" class="form-control"  />
                            <span asp-validation-for="@Model.ProfilePicture" class="text-danger"></span>
                        </div>
                </div>

            </div>
            <div class="row mt-3">

               <div class="col-md-4 offset-md-8 text-end">
                      @Html.ActionLink("Return to the list", "Index", "Employee", null, new { @class = "btn btn-primary btn-lg btn-block" })
                    <input id="frmProductCat" type="submit" value="Update" class="btn btn-primary btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>

